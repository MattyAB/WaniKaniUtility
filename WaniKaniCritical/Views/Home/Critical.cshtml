@model WaniKaniCritical.Models.JsonData

<html>
	<head>
		<link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.blue-orange.min.css" />
	</head>

	<body>
		<style>
			.radical {
				background-color: #0093dd;
			}
			.kanji {
				background-color: #dd0093;
			}
			.vocabulary {
				background-color: #9300dd;
			}
		</style>

		<!-- Always shows a header, even in smaller screens. -->
		<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
			<header class="mdl-layout__header">
				<div class="mdl-layout__header-row">
					<!-- Title -->
					<span class="mdl-layout-title">@Model.user_information.username</span>
					<!-- Add spacer, to align navigation to the right -->
					<div class="mdl-layout-spacer"></div>
					<!-- Navigation. We hide it in small screens. -->
					<span class="mdl-layout-title">@Model.requested_information.Count Critical items</span>
				</div>
			</header>
			<main class="mdl-layout__content">
				<div class="page-content">
					<div class="mdl-grid">
						@foreach (WaniKaniCritical.Models.LearningPoint point in Model.requested_information)
						{
							Html.RenderPartial("_LearningPoint", point);
						}
					</div>
				</div>
			</main>
		</div>
	</body>
</html>